<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimens_100_dp"
    android:layout_height="@dimen/dimens_145_dp"
    android:layout_gravity="center">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dimens_2_dp"
        android:background="?android:selectableItemBackground"
        android:clickable="true"
        android:orientation="vertical">

        <com.test.admin.conurbations.utils.RatioImageView
            android:id="@+id/recomend_img"
            android:layout_width="@dimen/dimens_100_dp"
            android:layout_height="@dimen/dimens_120_dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"/>

        <TextView
            android:id="@+id/recommend_title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimens_25_dp"
            android:layout_gravity="bottom|center_horizontal"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_marginTop="@dimen/dimens_2_dp"
            android:textSize="@dimen/dimens_10_sp"/>

    </LinearLayout>


</android.support.v7.widget.CardView>