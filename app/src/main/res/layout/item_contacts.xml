<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_index"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dimens_12_dp"
        android:text="G"
        android:textSize="@dimen/dimens_14_sp"
        android:background="#E0E0E0"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_70_dp"
        android:background="#FAFAFA">
        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="@dimen/dimens_40_dp"
            android:layout_height="@dimen/dimens_40_dp"
            android:layout_margin="@dimen/dimens_10_dp"
            android:src="@mipmap/ic_logo"
            android:contentDescription="avatar"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_toRightOf="@+id/iv_avatar"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gjiazhe"
                android:textColor="#424242"
                android:textSize="@dimen/dimens_16_sp"/>

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123456789"
                android:textColor="#424242"
                android:textSize="@dimen/dimens_16_sp"
                android:layout_marginLeft="@dimen/dimens_30_dp"
                android:layout_centerInParent="true"/>

        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_1_dp"
        android:background="#eee" />
</LinearLayout>